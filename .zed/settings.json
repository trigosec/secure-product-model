{
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": {
        "language_server": {
          "name": "ruff"
        }
      }
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": "./.venv/bin/python",
          "venvPath": ".",
          "venv": ".venv"
        },
        "python.analysis": {
          "extraPaths": ["./.venv/lib/python3.12/site-packages"]
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "interpreter": ["./.venv/bin/python"]
        }
      }
    }
  },
  "terminal": {
    "env": {
      "VIRTUAL_ENV": "./.venv",
      "PATH": "./.venv/bin:$PATH"
    }
  }
}
